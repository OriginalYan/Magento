            </item>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="zitec_dpd_cashondelivery_surcharge" instance="Zitec\Dpd\Model\Sales\Order\Invoice\Total\Cashondeliverysurchage" />
        </group>
    </section>
    <section name="order_creditmemo">
        <group name="totals">
            <item name="zitec_dpd_cashondelivery_surcharge" instance="Zitec\Dpd\Model\Sales\Order\Creditmemo\Total\Cashondeliverysurchage" />
        </group>
