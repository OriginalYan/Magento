        <group name="carriers">
            <item name="zitec_dpd" instance="Zitec\Dpd\Model\Shipping\Carrier\Dpd" />
        </group>
    </section>
    <section name="quote">
        <group name="totals">
            <item name="zitec_dpd_cashondelivery_surcharge" instance="Zitec\Dpd\Model\Sales\Quote\Address\Total\Cashondeliverysurchage">
