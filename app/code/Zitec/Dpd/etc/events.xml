    </event>
    <event name="sales_order_address_save_after">
        <observer name="zitec_dpd" instance="Zitec\Dpd\Model\Observer\OrderAddressAfterSave"/>
    </event>
    <event name="core_block_abstract_prepare_layout_before">
        <observer name="zitec_dpd_create_pickup" instance="Zitec\Dpd\Model\Observer\Pickup"/>
    </event>
    <event name="sales_quote_payment_import_data_before">
